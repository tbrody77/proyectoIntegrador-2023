<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo chico zapatilas prog.png" />
	
	<title> SNEAKERWORLD </title>
	<%- include('../partials/head-links'); %>
</head>
<body>
	<%- include('../partials/mainHeader') %>
	<!-- Banner -->
	<div class="banner">
		<img src="/images/light-blue.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%

			for(let index = 0; index < novedades.length; index++) {

	%> 

	<div class="col-12 col-sm-6 col-lg-3">
		<section class="product-box">
			<a href="product/<%=novedades[index].id %>">
				<figure class="product-box_image">
					<img src="/images/<%=novedades[index].foto %>" alt="cafetera moulinex">
				</figure>
				<article class="product-box_data">
					<h2><%= novedades[index].nombre %></h2>
					<p><%= novedades[index].descripcion %></p>
					<p><%= novedades[index].Usuario.id %></p>
					<p>usuario: <a href=<%= 'user/profile/' + novedades[index].Usuario.id %>> <%= novedades[index].Usuario.username %> </a> </p>
				</article>
			</a>
		</section>
	</div>

	<%
};
%> 

		</div>
	</div>
	<!-- /Novedades -->
	


	<%- include('../partials/footer'); %>
</body>	
</html>