<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="../public/images/logo chico zapatilas prog.png" />
	
	<title> SNEAKERWORLD </title>
	<%- include('../partials/head-links'); %>
</head>
<body>
	<% if(locals.usuario !== undefined){ %>
		<%-include('../partials/headerLogueado') %>
	<% }else{ %>
		<%- include('../partials/header'); %>
	
		<% } %>
	<!-- Banner -->
	<div class="banner">
		<img src="../public/images/light-blue.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%


novedades.forEach((producto) => {
	%> 

	<div class="col-12 col-sm-6 col-lg-3">
		<section class="product-box">
			<a href="product/<%=producto.id %>">
				<figure class="product-box_image">
					<img src="<%=producto.imagen %>" alt="cafetera moulinex">
				</figure>
				<article class="product-box_data">
					<h2><%= producto.nombre %></h2>
					<p><%= producto.descripcion %></p>
					<p><%= producto.Usuario.id %></p>
					<p>usuario: <a href=<%= 'user/profile/' + producto.Usuario.id %>> <%= producto.Usuario.username %> </a> </p>
				</article>
			</a>
		</section>
	</div>

	<%
});
%> 

		</div>
	</div>
	<!-- /Novedades -->
	


	<%- include('../partials/footer'); %>
</body>	
</html>