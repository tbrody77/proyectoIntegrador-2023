<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo chico zapatilas prog.png" />

	<title> SNEAKERWORLD</title>
	<%- include('../partials/head-links'); %>
</head>
<body>
	
	<%- include('../partials/mainHeader'); %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href=<%= "/product/edit/" + producto.id %>>Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/<%=producto.foto %>" alt="<%= producto.nombre %>" class="product-detail-img">
					<p class="product-detail-description">
						<%=producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
				

					<section class="comments">
						<% for(let index = 0; index < producto.Comentarios.length; index++){ %>
						<article>
							<img src="/images/users/<%=producto.Comentarios[index].Usuario.foto%>" alt="avatar user">
							<div class="data">
								<p class="user">
								<span> <%= producto.Comentarios[index].Usuario.username %> </span</p>	
								<p>
									<strong> <a href="/user/profile/<%= producto.Comentarios[index].usuarioId%>"><%=producto.Comentarios[index].nombreUsuario%></a> </strong>
								<%=producto.Comentarios[index].comentario%></p>
							</div>
						</article>
						<% 
					}
						%>
						

					</section>
					<form class="form" action=<%= "/product/" + producto.id + "/comment/add" %> method="post">
						<input class="form-input" type="text" name="comentario" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<%- include('../partials/footer'); %>

</body>	
</html>